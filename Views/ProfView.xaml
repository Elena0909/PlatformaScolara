                            HorizontalAlignment="Right"
                            Height="26" Margin="0,30.8,14,26.4" 
                            VerticalAlignment="Center" Width="69" Grid.Column="2" Grid.Row="1"/>
                        <ComboBox Grid.Column="3"
                            HorizontalAlignment="Center"
                            Height="26" Margin="11,30.8,81,26.4" x:Name="semestruM"
                            VerticalAlignment="Center" 
                            Width="44" ItemsSource="{Binding Semestre}" Grid.Row="1" />

                        <ComboBox Grid.Column="1"
                            HorizontalAlignment="Center"
                            Height="26" Margin="0,0,0,0" x:Name="materieM"
                            VerticalAlignment="Center"  SelectedItem="{Binding Materie}"
                            Width="126" ItemsSource="{Binding Materii}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Denumire}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <ComboBox Grid.Column="1"
                            HorizontalAlignment="Center"
                            Height="26" Margin="0,0,0,0" x:Name="claseM"
                            VerticalAlignment="Center" SelectedItem="{Binding Clasa}"
                            Width="126" ItemsSource="{Binding Clase}"   Grid.Row="1" >
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Clasa}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <ComboBox Grid.Column="3"
                            HorizontalAlignment="Center"
                            Height="26" Margin="0,0,0,0" x:Name="eleviM"
                            VerticalAlignment="Center"
                            Width="126" ItemsSource="{Binding Elevi}">

                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Nume}"/>
                                        <TextBlock Text=" "/>
                                        <TextBlock Text="{Binding Prenume}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                    </Grid>

                    <Grid Margin="-2,0,-0.4,0" Height="65" VerticalAlignment="Top">
                        <Grid.DataContext>
                            <help:Helper/>
                        </Grid.DataContext>
                        <Label Content="{Binding UserCurent}" 
                   FontFamily="Arial"
                   FontSize="20"
                   HorizontalContentAlignment="Right"
                   VerticalContentAlignment="Center"
                   Background="Orange"
                   HorizontalAlignment="Left"
                   Height="58" Margin="-3,-3,0,0"  
                   VerticalAlignment="Top" 
                   Width="792"/>
                    </Grid>
                    <Grid Margin="0,260,0,0">
                        <Border Margin="-2,0,-2,-2">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Orange" Offset="0.1" />
                                    <GradientStop Color="#FFFF7700" Offset="0.25" />
                                    <GradientStop Color="#FFFF5C00" Offset="0.4" />
                                    <GradientStop Color="#FFFF4900" Offset="0.55" />
                                    <GradientStop Color="#FFFF1B00" Offset="0.7" />
                                    <GradientStop Color="Red" Offset="0.85" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <DataGrid x:Name="medii"  Margin="10,10,16,17.4"  AutoGenerateColumns="False"
                  ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding CatalogMedii}" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Clasa" Binding="{Binding Clasa.Clasa}" Width="45"/>
                                <DataGridTextColumn Header="Nune"  Binding="{Binding Elev.Nume}" Width="85"/>
                                <DataGridTextColumn Header="Prenume"   Binding="{Binding Elev.Prenume}" Width="110"/>
                                <DataGridTextColumn Header="Materie" Binding="{Binding Materie.Denumire}"  Width="70"/>
                                <DataGridTextColumn Header="Nota" Binding="{Binding Nota}" Width="50"/>
                                <DataGridTextColumn Header="Semestru" Binding="{Binding Semestru}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <Button Content="Clasa mea" 
                            HorizontalAlignment="Left" Name="dirigM"
                            Height="41" Margin="31,5,0,0" Visibility="Hidden"
                            VerticalAlignment="Top"
                            Width="128" Click="Dirig_Click">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="TextElement.FontFamily" Value="Font"/>
                                <Setter Property="Background" Value="#FFFF5C00"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFFF5C00"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="90" Height="30"
                            CornerRadius="10"
                            Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </TabItem>
           
        </TabControl>
    </StackPanel>
</Window>
